<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_purple"
    android:padding="5dp">

    <TextView
        android:id="@+id/template_day_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/template_day_img_indicator"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_active_tab"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/template_day_title_txt"
        app:layout_constraintStart_toStartOf="@+id/template_day_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/template_day_title_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>